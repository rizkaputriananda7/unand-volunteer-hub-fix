<aside class="w-64 bg-white shadow-lg flex flex-col min-h-screen">
  <div class="p-6 flex items-center space-x-3 border-b">
    <div class="bg-teal-500 p-2 rounded-lg">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <span class="text-xl font-bold text-gray-800">Unand Volunteer Hub</span>
  </div>
  <nav class="flex-1 px-4 py-6 space-y-1 text-sm font-medium">
    <% const isActive = (menu) => title === menu ? 'bg-teal-500 text-white' : 'text-gray-700 hover:bg-gray-100'; %>
    <a href="/mahasiswa/dashboard" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Dashboard') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6m-6 4h6v6H5v-6h6z" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Dashboard
    </a>
    <a href="/mahasiswa/program" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Program Volunteer') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M20 13V8a2 2 0 00-2-2h-4V4a2 2 0 00-2-2H8a2 2 0 00-2 2v2H2v6h2v6h16v-6h2z" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Program Volunteer
    </a>
    <a href="/mahasiswa/pengumuman" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Pengumuman') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M12 8v4l3 3m-1-16a9 9 0 11-6.293 2.707" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Pengumuman
    </a>
    <a href="/mahasiswa/bookmark" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Bookmark') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"/></svg>
      Bookmark
    </a>
    <a href="/mahasiswa/deadline" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Kalender') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M8 7V3m8 4V3m-9 8h6m-3 4h3m4-8V5a2 2 0 00-2-2h-8a2 2 0 00-2 2v2h12z" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Kalender
    </a>
    <a href="/mahasiswa/status-pendaftaran" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Status Pendaftaran') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Status Pendaftaran
    </a>
    <a href="/mahasiswa/riwayat" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('Riwayat Pendaftaran') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M3 3v18h18V3H3zm4 4h10v2H7V7zm0 4h10v2H7v-2zm0 4h7v2H7v-2z" stroke-linecap="round" stroke-linejoin="round"/></svg>
      Riwayat Pendaftaran
    </a>
    <a href="/mahasiswa/faq" class="flex items-center gap-3 px-4 py-2 rounded-lg <%= isActive('FAQ') %>">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M8 10h.01M12 14h.01M16 10h.01M12 20h0m0-18a9 9 0 100 18 9 9 0 000-18z" stroke-linecap="round" stroke-linejoin="round"/></svg>
      FAQ
    </a>
    <a href="#" class="flex items-center gap-3 px-4 py-2 rounded-lg text-gray-400 cursor-not-allowed">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M13 16h-1v-4h-1m1-4h.01"/></svg>
      Bantuan Surat Motivasi
    </a>
  </nav>
  <div class="p-4 border-t mt-auto">
    <div class="flex items-center space-x-3 mb-4">
      <div class="w-10 h-10 rounded-full bg-indigo-200 text-indigo-700 flex items-center justify-center font-bold">
        <%= user.name.split(' ')[0][0] + (user.name.split(' ')[1] ? user.name.split(' ')[1][0] : '') %>
      </div>
      <div>
        <p class="font-semibold text-gray-800"><%= user.name %></p>
        <p class="text-sm text-gray-500"><%= user.role %></p>
      </div>
    </div>
    <a href="/" class="flex items-center justify-center w-full px-4 py-2 text-red-600 hover:bg-red-50 rounded-lg font-semibold">
      Logout
    </a>
  </div>
</aside>