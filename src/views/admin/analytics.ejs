<!DOCTYPE html>
<html lang="id">
<head>
    <title><%= title %> - Unand Volunteer Hub</title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <%- include('../partials/sidebar_admin', { user: user, title: title }) %>
        <main class="flex-1 p-8 overflow-y-auto">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">Statistik & Analitik Sistem</h1>
                <a href="#" class="bg-green-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-green-700">
                    Ekspor Data
                </a>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold text-gray-700 mb-4">Distribusi Pendaftar per Pusat Volunteer</h2>
                <div class="space-y-4">
                    <% for(const center in distribution) { %>
                        <div>
                            <div class="flex justify-between items-center mb-1">
                                <span class="text-gray-600"><%= center %></span>
                                <span class="font-bold text-lg text-purple-700"><%= distribution[center] %> Pendaftar</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-4">
                                <% const totalPendaftar = 6; %> 
                                <% const percentage = totalPendaftar > 0 ? (distribution[center] / totalPendaftar) * 100 : 0; %>
                                <div class="bg-purple-600 h-4 rounded-full" style="width: <%= percentage %>%;"></div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            
        </main>
    </div>
</body>
</html>