<!DOCTYPE html>
<html lang="id">
<head>
    <title><%= title %> - Unand Volunteer Hub</title>
    <link href="/css/tailwind.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-100">
    <div class="flex h-screen">
        <%- include('../partials/sidebar_admin', { user: user, title: title }) %>
        <main class="flex-1 p-8 overflow-y-auto">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-3xl font-bold text-gray-800">Kelola Pusat Volunteer</h1>
                <a href="#" class="bg-purple-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-purple-700">
                    + Tambah Pusat Baru
                </a>
            </div>
            
            <div class="bg-white rounded-lg shadow-md">
                <ul class="divide-y divide-gray-200">
                    <% centers.forEach(center => { %>
                        <li class="p-4 flex justify-between items-center">
                            <span class="font-medium text-gray-800"><%= center.nama %></span>
                            <div class="flex space-x-4">
                                <a href="#" class="text-blue-600 hover:text-blue-800 font-semibold">Edit</a>
                                <form action="/admin/centers/<%= center.id %>/delete" method="POST" onsubmit="return confirm('Apakah Anda yakin ingin menghapus pusat ini?');">
                                    <button type="submit" class="text-red-600 hover:text-red-800 font-semibold">Hapus</button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            </div>
        </main>
    </div>
</body>
</html>