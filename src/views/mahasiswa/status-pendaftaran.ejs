<%- include('../partials/sidebar_mahasiswa', { user, title }) %>

<main class="p-8">
  <h1 class="text-2xl font-bold mb-4">Status Pendaftaran</h1>

  <% if (!pendaftaran || pendaftaran.length === 0) { %>
    <p class="text-gray-600 text-center">Belum ada program yang diikuti.</p>
  <% } else { %>
    <div class="space-y-4">
      <% pendaftaran.forEach(p => { %>
        <div class="bg-white p-4 rounded-lg shadow border">
          <h2 class="text-lg font-semibold text-gray-800"><%= p.namaProgram %></h2>
          <p class="mt-1 text-sm text-gray-600">Status:
            <% if (p.status === 'terkirim') { %>
              <span class="text-blue-500 font-semibold">Terkirim</span>
            <% } else if (p.status === 'ditinjau') { %>
              <span class="text-yellow-500 font-semibold">Ditinjau</span>
            <% } else if (p.status === 'diterima') { %>
              <span class="text-green-600 font-semibold">Diterima</span>
            <% } else if (p.status === 'ditolak') { %>
              <span class="text-red-600 font-semibold">Ditolak</span>
            <% } else { %>
              <span class="text-gray-500">Status tidak diketahui</span>
            <% } %>
          </p>
        </div>
      <% }) %>
    </div>
  <% } %>
</main>