<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %> - Unand Volunteer Hub</title>
  <link href="/css/tailwind.css" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-teal-50/50">
  <div class="flex h-screen">

    <%- include('../partials/sidebar_mahasiswa', { user: user, title: title }) %>

        <!-- Konten Halaman Utama -->
        <main class="flex-1 overflow-y-auto">
            <header class="bg-white shadow-sm p-6 sticky top-0">
                <h1 class="text-2xl font-bold text-gray-900"><%= title %></h1>
            </header>

            <div class="p-6">
                <!-- Filter Dropdown -->
                <div class="mb-6 max-w-xs">
                    <label for="statusFilter" class="block text-sm font-medium text-gray-700 mb-2">Filter berdasarkan status:</label>
                    <select id="statusFilter" name="status" onchange="window.location.href='/mahasiswa/status-pendaftaran?status='+this.value" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md shadow-sm">
                        <option value="semua">Semua Status</option>
                        <option value="Diterima">Diterima</option>
                        <option value="Sedang Ditinjau">Sedang Ditinjau</option>
                        <option value="Ditolak">Ditolak</option>
                    </select>
                </div>

                <!-- Tabel Status Pendaftaran -->
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nama Program</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tanggal Pendaftaran</th>
                                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                <% if (locals.registrations && registrations.length > 0) { %>
                                    <% registrations.forEach(function(reg) { %>
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900"><%= reg.program %></div></td>
                                            <td class="px-6 py-4 whitespace-nowrap"><div class="text-sm text-gray-600"><%= reg.tanggal_pendaftaran %></div></td>
                                            <td class="px-6 py-4 whitespace-nowrap">
                                                <% if (reg.status === 'Diterima') { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"><%= reg.status %></span>
                                                <% } else if (reg.status === 'Sedang Ditinjau') { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800"><%= reg.status %></span>
                                                <% } else { %>
                                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800"><%= reg.status %></span>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" class="px-6 py-4 text-center text-sm text-gray-500">Anda belum memiliki status pendaftaran.</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const status = urlParams.get('status');
            if (status) {
                document.getElementById('statusFilter').value = status;
            } else {
                document.getElementById('statusFilter').value = 'semua';
            }
        });
    </script>
</body>
</html>