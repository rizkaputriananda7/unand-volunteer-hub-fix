<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/tailwind.css">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-8">
        <a href="/pengurus/dashboard" class="text-blue-600 hover:underline mb-4 inline-block">&larr; Kembali ke Dashboard</a>
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Manajemen FAQ</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="md:col-span-2 bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold mb-4">Daftar Pertanyaan</h2>
                <% if (faqs.length > 0) { %>
                    <div class="space-y-4">
                        <% faqs.forEach(faq => { %>
                            <div class="border rounded-lg p-4">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <p class="font-bold text-lg"><%= faq.pertanyaan %></p>
                                        <p class="mt-2 text-gray-700"><%= faq.jawaban %></p>
                                        <p class="text-xs text-gray-500 mt-2 bg-gray-200 px-2 py-1 rounded-full inline-block">Kategori: <%= faq.kategori %></p>
                                    </div>
                                    <div class="flex space-x-2">
                                        <form action="/pengurus/faq/<%= faq.id %>/delete" method="POST" onsubmit="return confirm('Anda yakin ingin menghapus FAQ ini?');">
                                            <button type="submit" class="text-red-500 hover:text-red-700 font-semibold">Hapus</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <p class="text-gray-500">Belum ada FAQ yang ditambahkan.</p>
                <% } %>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-bold mb-4">Tambah FAQ Baru</h2>
                <form action="/pengurus/faq/create" method="POST">
                    <div class="mb-4">
                        <label for="pertanyaan" class="block text-gray-700 font-semibold mb-2">Pertanyaan</label>
                        <textarea id="pertanyaan" name="pertanyaan" rows="3" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
                    </div>
                    <div class="mb-4">
                        <label for="jawaban" class="block text-gray-700 font-semibold mb-2">Jawaban</label>
                        <textarea id="jawaban" name="jawaban" rows="6" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required></textarea>
                    </div>
                    <div class="mb-4">
                        <label for="kategori" class="block text-gray-700 font-semibold mb-2">Kategori</label>
                        <input type="text" id="kategori" name="kategori" value="Umum" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    </div>
                    <button type="submit" class="w-full bg-purple-600 text-white font-bold py-2 px-4 rounded-lg hover:bg-purple-700">
                        Tambah FAQ
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>