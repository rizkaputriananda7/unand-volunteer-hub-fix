<!-- Sidebar untuk Pengurus -->
<aside class="sidebar">
  <div class="sidebar-header">
    <span>Pusat Volunteer</span>
  </div>
  <nav class="sidebar-nav-links">
    <a
      href="/pengurus/dashboard"
      class="sidebar-nav-item <%= (active === 'dashboard') ? 'active' : '' %>"
    >
      <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
    </a>
    <a
      href="/pengurus/program"
      class="sidebar-nav-item <%= (active === 'daftar-program') ? 'active' : '' %>"
    >
      <i class="fas fa-list-alt"></i> <span>Daftar Program</span>
    </a>
    <a
      href="/pengurus/program/buat"
      class="sidebar-nav-item <%= (active === 'buat-program') ? 'active' : '' %>"
    >
      <i class="fas fa-plus-circle"></i> <span>Buat Program</span>
    </a>
    <a
      href="/pengurus/seleksi"
      class="sidebar-nav-item <%= (active === 'seleksi') ? 'active' : '' %>"
    >
      <i class="fas fa-users-cog"></i> <span>Manajemen Seleksi</span>
    </a>
    <a
      href="/pengurus/jadwal"
      class="sidebar-nav-item <%= (active === 'jadwal') ? 'active' : '' %>"
    >
      <i class="fas fa-calendar-check"></i> <span>Jadwal Seleksi</span>
    </a>
    <a
      href="/pengurus/komunikasi"
      class="sidebar-nav-item <%= (active === 'komunikasi') ? 'active' : '' %>"
    >
      <i class="fas fa-paper-plane"></i> <span>Kirim Pengumuman</span>
    </a>
    <a
      href="/pengurus/validasi"
      class="sidebar-nav-item <%= (active === 'validasi') ? 'active' : '' %>"
    >
      <i class="fas fa-check-double"></i> <span>Validasi Dokumen</span>
    </a>
    <a
      href="/pengurus/analitik"
      class="sidebar-nav-item <%= (active === 'analitik') ? 'active' : '' %>"
    >
      <i class="fas fa-chart-bar"></i> <span>Statistik</span>
    </a>
    <a
      href="/pengurus/konten"
      class="sidebar-nav-item <%= (active === 'konten') ? 'active' : '' %>"
    >
      <i class="fas fa-edit"></i> <span>Manajemen Konten</span>
    </a>
    <a
      href="/pengurus/umpan-balik"
      class="sidebar-nav-item <%= (active === 'lihat-umpan-balik') ? 'active' : '' %>"
    >
      <i class="fas fa-comment-alt"></i> <span>Umpan Balik Program</span>
    </a>
  </nav>
  <div class="p-4 border-t" style="border-color: var(--border-color)">
    <% if (user) { %>
    <div class="text-xs mb-2">
      <p class="font-semibold text-text-primary"><%= user.nama_lengkap %></p>
      <p class="text-text-secondary capitalize"><%= user.role %></p>
    </div>
    <% } %>
    <a href="/auth/logout" class="sidebar-nav-item sidebar-logout">
      <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
    </a>
  </div>
</aside>
