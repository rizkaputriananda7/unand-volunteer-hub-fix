<div class="card-container max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-center mb-6"><i class="fas fa-edit mr-2"></i>Edit Jadwal Acara</h2>

    <form action="/pengurus/jadwal/edit/<%= jadwal.id %>" method="POST" class="space-y-4">
        <div>
            <label for="program_id" class="form-label">Untuk Program</label>
            <select id="program_id" name="program_id" class="form-select" required>
                <% programs.forEach(program => { %>
                    <option value="<%= program.id %>" <%= jadwal.program_id == program.id ? 'selected' : '' %>>
                        <%= program.title %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div>
            <label for="nama_acara" class="form-label">Nama Acara</label>
            <input type="text" id="nama_acara" name="nama_acara" class="form-input" value="<%= jadwal.nama_acara %>" required>
        </div>
        <div>
            <label for="tanggal_acara" class="form-label">Tanggal & Waktu Acara</label>
            <% const tgl = new Date(jadwal.tanggal_acara); %>
            <% const formattedDate = `${tgl.getFullYear()}-${String(tgl.getMonth() + 1).padStart(2, '0')}-${String(tgl.getDate()).padStart(2, '0')}T${String(tgl.getHours()).padStart(2, '0')}:${String(tgl.getMinutes()).padStart(2, '0')}`; %>
            <input type="datetime-local" id="tanggal_acara" name="tanggal_acara" class="form-input" value="<%= formattedDate %>" required>
        </div>
        <div>
            <label for="deskripsi_acara" class="form-label">Deskripsi (Opsional)</label>
            <textarea id="deskripsi_acara" name="deskripsi_acara" class="form-textarea" rows="2"><%= jadwal.deskripsi_acara || '' %></textarea>
        </div>
        <div class="flex justify-end pt-4 border-t">
            <a href="/pengurus/jadwal" class="secondary-button mr-3">Batal</a>
            <button type="submit" class="primary-button">
                <i class="fas fa-save mr-2"></i>Simpan Perubahan
            </button>
        </div>
    </form>
</div>
