<div class="card-container max-w-2xl mx-auto">
    <h2>Edit Profil Saya</h2>
    <form class="space-y-4" method="POST" action="/mahasiswa/profil">
        <div>
            <label class="form-label" for="nama_lengkap">Nama Lengkap</label>
            <input type="text" id="nama_lengkap" name="nama_lengkap" class="form-input" value="<%= user ? user.nama_lengkap : '' %>" required>
        </div>
        <div>
            <label class="form-label" for="nim">NIM</label>
            <input type="text" id="nim" class="form-input" value="<%= user ? user.nim : '' %>" disabled>
        </div>
        <div>
            <label class="form-label" for="email">Email</label>
            <input type="email" id="email" name="email" class="form-input" value="<%= user ? user.email : '' %>" required>
        </div>
        <div>
            <label class="form-label" for="nomor_hp">Nomor HP/WhatsApp</label>
            <input type="text" id="nomor_hp" name="nomor_hp" class="form-input" value="<%= user ? user.nomor_hp : '' %>" placeholder="Contoh: 081234567890">
        </div>
        <div class="flex justify-end pt-4 border-t">
            <button type="submit" class="primary-button">Simpan Perubahan</button>
        </div>
    </form>
</div>