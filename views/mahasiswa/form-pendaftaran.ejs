<div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold">Pendaftaran Program Volunteer</h2>
            <p class="text-gray-600 mt-1">Untuk Program: <strong class="text-primary-teal"><%= program.title %></strong></p>
        </div>
        
        <form action="/programs/<%= program.id %>/apply" method="POST" enctype="multipart/form-data" class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="nama_lengkap" class="form-label">Nama Lengkap (Sesuai KTM)</label>
                    <input type="text" id="nama_lengkap" class="form-input bg-gray-100 cursor-not-allowed" value="<%= user.nama_lengkap %>" readonly>
                </div>
                <div>
                    <label for="nim" class="form-label">NIM</label>
                    <input type="text" id="nim" class="form-input bg-gray-100 cursor-not-allowed" value="<%= user.nim %>" readonly>
                </div>
                <div>
                    <label for="email" class="form-label">Alamat Email Aktif</label>
                    <input type="email" id="email" class="form-input bg-gray-100 cursor-not-allowed" value="<%= user.email %>" readonly>
                </div>
                 <div>
                    <label for="nomor_hp" class="form-label">Nomor Telepon/WhatsApp</label>
                    <input type="tel" id="nomor_hp" class="form-input bg-gray-100 cursor-not-allowed" value="<%= user.nomor_hp || 'Belum diisi' %>" readonly>
                     <% if (!user.nomor_hp) { %> <p class="text-xs text-red-500 mt-1">Harap isi nomor HP di <a href="/mahasiswa/profil" class="font-bold underline">halaman profil</a> Anda.</p> <% } %>
                </div>
            </div>
            <div>
                <label for="motivasi" class="form-label">Motivasi Mengikuti Program</label>
                <textarea name="motivasi" id="motivasi" rows="6" class="form-textarea" placeholder="Jelaskan mengapa Anda tertarik dan cocok untuk program ini..." required></textarea>
            </div>
            
            <fieldset class="border-t pt-4">
                 <legend class="text-lg font-semibold -translate-y-6 px-2 bg-white">Unggah Dokumen</legend>
                 <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    <div><label class="form-label">Unggah CV (PDF)</label><input type="file" name="cv" class="form-input" required accept=".pdf"></div>
                    <div><label class="form-label">Unggah Transkrip (PDF)</label><input type="file" name="transkrip" class="form-input" required accept=".pdf"></div>
                    <div><label class="form-label">Scan KTM (PDF/JPG/PNG)</label><input type="file" name="ktm" class="form-input" required accept=".pdf,.jpg,.jpeg,.png"></div>
                </div>
            </fieldset>
            
            <div class="pt-4">
                <div class="flex items-center">
                    <input type="checkbox" id="agreement" name="agreement" class="h-4 w-4 rounded border-gray-300 text-primary-teal focus:ring-primary-teal" required>
                    <label for="agreement" class="ml-2 block text-sm text-gray-700">Saya menyatakan bahwa semua data yang saya isi adalah benar dan saya bersedia mengikuti seluruh ketentuan program volunteer ini.</label>
                </div>
            </div>
            
            <div class="pt-6 border-t flex justify-end">
                <a href="/programs/<%= program.id %>" class="secondary-button mr-3">Batal</a>
                <button type="submit" class="primary-button text-lg py-3 px-8"><i class="fas fa-paper-plane mr-2"></i>Kirim Pendaftaran</button>
            </div>
        </form>
    </div>
</div>
