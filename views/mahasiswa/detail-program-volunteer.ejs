<div class="bg-white max-w-6xl mx-auto rounded-xl shadow-lg overflow-hidden">
    <!-- Header dengan Penyelenggara -->
    <div class="p-4 bg-gray-50 border-b">
        <p class="text-sm text-gray-600">Penyelenggara: <strong class="text-primary-teal"><%= program.nama_pusat %></strong></p>
    </div>

    <div class="p-6 md:p-8">
        <!-- Gambar Program (Placeholder) -->
        <div class="w-full h-64 bg-teal-100 rounded-lg flex items-center justify-center mb-6">
            <p class="text-gray-400">Gambar Program <%= program.title %></p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Kolom Kiri: Deskripsi & Detail -->
            <div class="lg:col-span-2 space-y-8">
                <div>
                    <h2 class="text-3xl font-bold text-gray-800"><%= program.title %></h2>
                    <p class="text-gray-600 mt-2"><%= program.description %></p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <h3 class="font-bold text-lg mb-2">Persyaratan</h3>
                        <ul class="list-disc list-inside text-gray-700 space-y-1 text-sm">
                            <% program.persyaratan.split('\n').forEach(item => { if(item) { %>
                                <li><%= item %></li>
                            <% }}) %>
                        </ul>
                    </div>
                    <div>
                        <h3 class="font-bold text-lg mb-2">Manfaat</h3>
                        <ul class="list-disc list-inside text-gray-700 space-y-1 text-sm">
                             <% program.manfaat.split('\n').forEach(item => { if(item) { %>
                                <li><%= item %></li>
                            <% }}) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Kolom Kanan: Info Cepat & Aksi -->
            <div class="lg:col-span-1 space-y-4">
                <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-users text-blue-500 text-xl"></i>
                        <div>
                            <p class="text-xs font-bold">Kuota</p>
                            <p class="text-sm"><%= program.quota %> Peserta</p>
                        </div>
                    </div>
                </div>
                 <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-calendar-alt text-yellow-500 text-xl"></i>
                        <div>
                            <p class="text-xs font-bold">Periode Pendaftaran</p>
                            <p class="text-sm"><%= new Date(program.pendaftaran_mulai).toLocaleDateString('id-ID') %> - <%= new Date(program.pendaftaran_akhir).toLocaleDateString('id-ID') %></p>
                        </div>
                    </div>
                </div>
                <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-clock text-green-500 text-xl"></i>
                        <div>
                            <p class="text-xs font-bold">Durasi</p>
                            <p class="text-sm"><%= program.durasi %></p>
                        </div>
                    </div>
                </div>
                 <div class="p-4 bg-purple-50 border border-purple-200 rounded-lg">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-map-marker-alt text-purple-500 text-xl"></i>
                        <div>
                            <p class="text-xs font-bold">Lokasi</p>
                            <p class="text-sm"><%= program.location %></p>
                        </div>
                    </div>
                </div>
                 <div class="p-4 bg-gray-100 border border-gray-200 rounded-lg">
                    <h4 class="font-bold text-sm mb-1">Kontak Koordinator</h4>
                    <p class="text-sm"><%= program.kontak_narahubung %></p>
                </div>

                <!-- Tombol Aksi -->
                <div class="pt-4 space-y-2">
                     <% if (hasApplied) { %>
                         <button type="button" class="primary-button w-full justify-center py-3" disabled style="opacity: 0.7; cursor: not-allowed;">
                            <i class="fas fa-check mr-2"></i> Anda Sudah Mendaftar
                        </button>
                    <% } else { %>
                        <a href="/programs/<%= program.id %>/daftar" class="primary-button w-full justify-center py-3 text-center">
                             <i class="fas fa-paper-plane mr-2"></i> Daftar Program Ini
                        </a>
                    <% } %>
                    <form action="/mahasiswa/bookmark/<%= program.isBookmarked ? 'remove' : 'add' %>" method="POST">
                        <input type="hidden" name="programId" value="<%= program.id %>">
                        <button type="submit" class="secondary-button w-full justify-center py-3 bg-white border border-gray-300 text-gray-700 hover:bg-gray-100">
                            <% if (program.isBookmarked) { %>
                                <i class="fas fa-bookmark text-primary-teal mr-2"></i> Hapus dari Favorit
                            <% } else { %>
                                <i class="far fa-bookmark mr-2"></i> Simpan ke Favorit
                            <% } %>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
