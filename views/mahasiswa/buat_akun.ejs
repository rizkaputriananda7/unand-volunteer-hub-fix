<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Daftar Akun Mahasiswa</h2>
        <p class="auth-subtitle">Isi data berikut untuk memulai.</p>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= error %></span>
          </div>
        <% } %>
        <form class="space-y-5" method="POST" action="/auth/register">
            <input type="hidden" name="role" value="mahasiswa" />
            <div>
                <input type="text" name="nama_lengkap" class="auth-input-field" placeholder="Nama Lengkap" required>
            </div>
            <div>
                <input type="text" name="nim" class="auth-input-field" placeholder="NIM (Nomor Induk Mahasiswa)" required>
            </div>
            <div>
                <input type="email" name="email" class="auth-input-field" placeholder="Alamat Email Unand" required>
            </div>
            <div>
                <input type="password" name="password" class="auth-input-field" placeholder="Password (min. 6 karakter)" required>
            </div>
            <button type="submit" class="auth-button">Daftar Akun</button>
        </form>
        <p class="text-sm mt-6 text-gray-600">
            Sudah punya akun? <a href="/auth/login?role=mahasiswa" class="auth-link-text">Login disini</a>
        </p>
    </div>
</div>
