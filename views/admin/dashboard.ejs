<div class="space-y-8">
    <!-- Bagian Sambutan -->
    <div>
        <h2 class="text-3xl font-bold text-gray-800">Selamat Datang, Admin!</h2>
        <p class="text-gray-600">Berikut adalah ringkasan dari seluruh platform Unand Volunteer Hub.</p>
    </div>

    <!-- Kotak Statistik Utama -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="stat-box p-5"><div class="stat-icon icon-pendaftar"><i class="fas fa-users"></i></div><div class="stat-content"><p class="stat-value"><%= stats.totalUsers %></p><p class="stat-label">Total Pengguna</p></div></div>
        <div class="stat-box p-5"><div class="stat-icon icon-diterima"><i class="fas fa-tasks"></i></div><div class="stat-content"><p class="stat-value"><%= stats.totalPrograms %></p><p class="stat-label">Total Program</p></div></div>
        <div class="stat-box p-5"><div class="stat-icon icon-program"><i class="fas fa-file-alt"></i></div><div class="stat-content"><p class="stat-value"><%= stats.totalAplikasi %></p><p class="stat-label">Total Lamaran</p></div></div>
        <div class="stat-box p-5"><div class="stat-icon" style="background: var(--accent-purple)"><i class="fas fa-university"></i></div><div class="stat-content"><p class="stat-value"><%= stats.totalPusat %></p><p class="stat-label">Total Pusat Volunteer</p></div></div>
    </div>

    <!-- Dua Kolom: Aktivitas Terbaru & Akses Cepat -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Kolom Aktivitas Terbaru -->
        <div class="lg:col-span-2 card-container p-6">
            <h3 class="text-xl font-bold mb-4">Aktivitas Terbaru Platform</h3>
            <div class="space-y-3">
                <% if (activities && activities.length > 0) { %>
                    <% activities.forEach(act => { %>
                        <div class="p-3 bg-gray-50 border-l-4 <%= act.tipe === 'Mahasiswa Baru' ? 'border-accent-blue' : 'border-primary-teal' %> rounded-r-lg">
                            <p class="text-sm">
                                <i class="fas <%= act.tipe === 'Mahasiswa Baru' ? 'fa-user-plus text-accent-blue' : 'fa-plus-circle text-primary-teal' %> mr-2"></i>
                                <!-- Menggunakan 'nama_aktivitas' yang baru -->
                                <strong><%= act.tipe %>:</strong> <%= act.nama_aktivitas %>
                            </p>
                            <p class="text-xs text-gray-500 mt-1 pl-6"><%= new Date(act.created_at).toLocaleString('id-ID') %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center text-gray-500 py-4">Belum ada aktivitas terbaru.</p>
                <% } %>
            </div>
        </div>

        <!-- Kolom Akses Cepat -->
        <div class="lg:col-span-1 card-container p-6">
            <h3 class="text-xl font-bold mb-4">Akses Cepat</h3>
            <div class="space-y-3">
                <a href="/admin/manajemen-pengguna" class="block w-full text-left p-3 rounded-lg hover:bg-gray-100 transition">
                    <i class="fas fa-users-cog mr-2 w-6 text-center text-gray-500"></i>
                    <span class="font-semibold">Manajemen Pengguna</span>
                </a>
                <a href="/admin/manajemen-pusat" class="block w-full text-left p-3 rounded-lg hover:bg-gray-100 transition">
                    <i class="fas fa-university mr-2 w-6 text-center text-gray-500"></i>
                    <span class="font-semibold">Manajemen Pusat</span>
                </a>
                </a>
                <a href="/admin/log-pengumuman" class="block w-full text-left p-3 rounded-lg hover:bg-gray-100 transition">
                    <i class="fas fa-bullhorn mr-2 w-6 text-center text-gray-500"></i>
                    <span class="font-semibold">Kirim Pengumuman Global</span>
                </a>
            </div>
        </div>
    </div>
</div>
