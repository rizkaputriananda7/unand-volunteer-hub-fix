<div class="card-container max-w-2xl mx-auto">
    <h2><i class="fas fa-plus-circle mr-2"></i>Tambah Pusat Volunteer Baru</h2>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-4 text-sm" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>
    <form action="/admin/manajemen-pusat" method="POST" class="space-y-5 mt-6">
        <div>
            <label for="nama_pusat" class="form-label">Nama Pusat Volunteer</label>
            <input type="text" id="nama_pusat" name="nama_pusat" class="form-input" placeholder="Contoh: American Corner Unand" required>
        </div>
        <div>
            <label for="deskripsi" class="form-label">Deskripsi Singkat (Opsional)</label>
            <textarea id="deskripsi" name="deskripsi" class="form-textarea" rows="3" placeholder="Jelaskan sedikit tentang pusat ini..."></textarea>
        </div>
        <div class="flex justify-end pt-4 border-t">
            <button type="submit" class="primary-button">
                <i class="fas fa-save mr-2"></i>Simpan Pusat
            </button>
        </div>
    </form>
</div>