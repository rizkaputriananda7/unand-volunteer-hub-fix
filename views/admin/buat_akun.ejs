<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Daftar Akun Admin</h2>
        <p class="auth-subtitle">Hanya untuk administrator terotorisasi.</p>
         <% if (typeof error !== 'undefined' && error) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= error %></span>
          </div>
        <% } %>
        <form class="space-y-5" method="POST" action="/auth/register">
            <input type="hidden" name="role" value="admin" />
            <div>
                <input type="text" name="nama_lengkap" class="auth-input-field" placeholder="Nama Lengkap" required>
            </div>
            <div>
                <input type="text" name="username" class="auth-input-field" placeholder="Username (untuk login)" required>
            </div>
            <div>
                <input type="email" name="email" class="auth-input-field" placeholder="Alamat Email" required>
            </div>
            <div>
                <input type="password" name="password" class="auth-input-field" placeholder="Password" required>
            </div>
            <div>
                <input type="password" name="access_code" class="auth-input-field" placeholder="Kode Akses Khusus" required>
            </div>
            <button type="submit" class="auth-button">Buat Akun Admin</button>
        </form>
    </div>
</div>
